<% include _header %>

<h1>Registro de Arma</h1>
<br>
<form action="/creategun" method="post">
    <div class="form-group row">
        <label class="col-md-1">Descripcion:</label> 
        <div class="col-md-4">
            <input name="description" type="text" class="form-control" placeholder="Descripcion del arma" required autofocus/>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-1">Fuerza:</label>
        <div class="col-md-4">
            <input name="power" type="text" class="form-control" placeholder="Fuerza" required/>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-1">Categoria:</label>
        <div class="col-md-4">
            <input name="category" type="text" class="form-control" placeholder="Categoria" required/>
        </div>
    </div>
    <div class="row">
        <label  class="col-md-1">Municion:</label>
        <div class="col-md-2">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="ammo" id="exampleRadios1" value="true" checked>
                <label class="form-check-label" for="exampleRadios1">Tiene Municion</label>
            </div>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="ammo" id="exampleRadios2" value="false">
            <label class="form-check-label" for="exampleRadios2">Sin Municion</label>
        </div>
    </div>
    <div class="row">
    <div class="col-md-1"></div>
        <div class="col-md-2">
        <input type="submit" value="Registrar Arma" class="btn btn-primary btn-block"/>
        </div>
    </div>
</form>

<% include _footer %>